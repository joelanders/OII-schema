{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "unique identifier"
    },
    "name": {
      "type": "string",
      "description": "app name"
    },
    "type": {
      "type": "string",
      "description": "app/os/hw/infra (XXX: should be fixed \"app\" in this doc?)"
    },
    "source": {
      "type": "string",
      "description": "URL to source repo"
    },
    "tracker": {
      "type": "string",
      "description": "URL to issue tracker"
    },
    "manifest": {
      "type": "object",
      "properties": {
        "kind": {
          "type": "string",
          "description": "eg. gradle/gemfile/package.json (XXX: should be enum?)"
        },
        "_meta": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "submitter": {
              "type": "string"
            }
          },
          "required": [
            "id"
          ]
        }
      },
      "required": [
        "kind"
      ]
    },
    "dependencies": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "checksum": {
              "type": "string"
            },
            "metadata": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "submitter": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "submitter"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "id",
            "type",
            "checksum",
            "metadata"
          ],
          "additionalProperties": false
        }
      ]
    },
    "builds": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "description": "apk, exe"
            },
            "checksum": {
              "type": "string"
            },
            "metadata": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "submitter": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "submitter"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "id",
            "type",
            "checksum",
            "metadata"
          ],
          "additionalProperties": false
        }
      ]
    },
    "os": {
      "type": "string"
    },
    "oses": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "family": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "family",
            "version"
          ],
          "additionalProperties": false
        }
      ]
    },
    "infra": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "name"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "id",
    "name",
    "type",
    "dependencies",
    "builds",
    "os",
    "oses",
    "infra"
  ]
}
